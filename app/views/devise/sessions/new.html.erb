

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
    <%= f.label :email, class: "col-sm-10 control-label"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-sm-10 ml-3 " %>
  </div>

  <div class="field">
    <%= f.label :password, class: "col-sm-10 control-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-sm-10 ml-3 " %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-check ml-3" style="margin-top: 1rem; margin-bottom: 1rem">
      <%= f.check_box :remember_me, class:"form-check-input" %>
      <%= f.label :remember_me, class:"form-check-label"%>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", :class => "btn btn-primary ml-3" %>
  </div>
<% end %>


