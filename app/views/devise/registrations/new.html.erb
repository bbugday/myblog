

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "col-sm-10 control-label"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-sm-10 ml-3 " %>
  </div>

  <div class="field">
    <%= f.label :password, class: "col-sm-10 control-label" %><br />
    
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-sm-10 ml-3 "  %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "col-sm-10 control-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-sm-10 ml-3 " %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Sign up", :class => "btn btn-primary ml-3" %>
  </div>
<% end %>

