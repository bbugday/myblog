<li>
  <div style="margin-top: 1rem; margin-bottom: 1rem"><%= comment.body %> -
  <small>Submitted <%= time_ago_in_words(comment.created_at) %> ago by <a href="#"><%= comment.user.email %></a></small></div>

  <%= form_for [comment, Comment.new] do |f| %>
    <%= f.text_field :body, placeholder: "Add a Reply", class: "form-control " %><br/>
    <%= f.submit "Reply", :class => "btn btn-primary"   %>
  <% end %>

  <ul>
      <%= render comment.comments %>
  </ul>

</li>